{
  "extends": "../tsconfig.options.json",
  "include": ["vite-env.d.ts", "src/**/*", "src/**/*.vue", "tests/**/*.spec.ts"],
  "exclude": ["**/node_modules/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      ":common/*": ["../common/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client", "@types/node"]
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
